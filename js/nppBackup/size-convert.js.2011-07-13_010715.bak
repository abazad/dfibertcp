jQuery.fn.size_from_bytes = function() {
    var bytes = $(this).text();
	var ret = "";
	if ( bytes > 1073741824 ) {
		ret = ( bytes / 1024 / 1024 / 1024 ) + " GB";
	} else if ( bytes > 1048576 ) {
		ret = ( bytes / 1024 / 1024 ) + " MB";
	} else if ( bytes >= 1024 ) {
		ret = ( bytes / 1024 ) + " KB";
	} else {
		ret = bytes + " Bytes";
	}
	return ret;
};